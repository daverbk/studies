<persistence xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0">

  <persistence-unit name="music">

    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
      <property name="jakarta.persistence.jdbc.url"    value="jdbc:postgresql://localhost:5432/music" />
      <property name="jakarta.persistence.jdbc.user"   value="dev" />
      <property name="jakarta.persistence.jdbc.password" value="pass" />
      <property name="hibernate.show_sql" value="true" />

    </properties>

  </persistence-unit>
</persistence>
